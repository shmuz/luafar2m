  local ref = v[2]
  local out = md.GetDirs(v[1])
  if #out == #ref then
    table.sort(ref)
    table.sort(out)
    for k=1,#ref do
      if out[k] ~= ref[k] then
        far.Show(v[1], out[k], ref[k])
        return
      end
    end
  else
    far.Message("wrong number of directories\n"..v[1], "MkDir test", nil, "l")
    --require("far2.lua_explorer")(out)
    return
  end
end

